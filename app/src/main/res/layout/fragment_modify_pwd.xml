<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".views.fragment.ModifyPwdFragment">

    <include layout="@layout/layout_header_default"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/txtOldPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="请输入原密码"
            android:background="@drawable/shape_reg_input"/>

        <EditText
            android:id="@+id/txtNewPwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:background="@drawable/shape_reg_input"/>

        <EditText
            android:id="@+id/txtNewPwd1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="请再次输入新密码"
            android:background="@drawable/shape_reg_input"/>

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@mipmap/login_bt"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/cffffff"
            android:text="@string/txt_submit"/>
    </LinearLayout>
</LinearLayout>