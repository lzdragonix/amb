<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".view.fragment.FinanceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/sqyh_img"/>

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img1"
            android:layout_alignTop="@+id/img1"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/c000000"
            android:text="成都支行"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt1"
            android:layout_below="@+id/txt1"
            android:layout_marginTop="10dp"
            android:text="武侯区武侯大道铁佛段金履四路2号（近邓小平广场）0755-88888888"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/ccccccc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="客户经理"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_on"/>

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_off"/>

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_off"/>

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_off"/>

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_off"/>

            <View
                android:layout_height="10dp"
                android:layout_width="10dp"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/chs_off"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cfbc000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/manger_img"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@color/ce4e4e4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="@color/c000000"
                    android:text="刘欢欢"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="真诚为每一位客人服务到最好，成为你信任的助手！"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ce4e4e4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/manger_phone"
            android:drawablePadding="10dp"
            android:text="18283378950"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ce4e4e4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/ccccccc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="产品推荐"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/cp_1"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img2"
            android:layout_alignTop="@+id/img2"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/c000000"
            android:text="移动支付"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt2"
            android:layout_below="@+id/txt2"
            android:layout_marginTop="10dp"
            android:text="支持移动收款，实时反馈到帐结果！"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/cp_2"/>

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img3"
            android:layout_alignTop="@+id/img3"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/c000000"
            android:text="车主卡"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt3"
            android:layout_below="@+id/txt3"
            android:layout_marginTop="10dp"
            android:text="加油享超低优惠，首刷寄送价值1100元意外保险！"/>
    </RelativeLayout>
</LinearLayout>