<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/c0a465e">

    <TextView
        android:id="@+id/txtCity"
        android:drawableLeft="@mipmap/icon_1"
        android:drawablePadding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="5dp"
        android:textColor="@color/cffffff"
        android:textSize="16sp"
        android:text="北京"/>

    <TextView
        android:id="@+id/txtCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtCity"
        android:layout_marginLeft="5dp"
        android:textColor="@color/cffffff"
        android:textSize="16sp"
        android:text="朝阳区"/>

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/cfbc000"
        android:textSize="20sp"
        android:text="@string/app_name"/>

    <ImageView
        android:id="@+id/shezhi"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/my_shezhi"
        android:contentDescription="@string/app_name"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cfbc000"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>