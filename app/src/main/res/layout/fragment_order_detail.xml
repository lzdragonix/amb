<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".views.fragment.OrderDetailFragment">

    <include layout="@layout/layout_header_default"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:background="@color/cffffff">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="蓝牙迷你便携式自拍杆"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/c000000"/>

                <TextView
                    android:id="@+id/lbl_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="10dp"
                    android:text="数量："/>

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_alignTop="@+id/lbl_quantity"
                    android:layout_toRightOf="@+id/lbl_quantity"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cf90000"
                    android:text="1 个"/>

                <TextView
                    android:id="@+id/lbl_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lbl_quantity"
                    android:layout_alignTop="@+id/lbl_quantity"
                    android:layout_marginLeft="150dp"
                    android:text="金额总计："/>

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_alignTop="@+id/lbl_amount"
                    android:layout_toRightOf="@+id/lbl_amount"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cf90000"
                    android:text="69 元"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ccccccc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c000000"
                android:textSize="18sp"
                android:text="送货方式"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_delivery"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/shape_delivery1"
                    android:textColor="@color/cfbc000"
                    android:text="送货上门"/>

                <TextView
                    android:id="@+id/txt_delivery1"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/shape_delivery1"
                    android:textColor="@color/cfbc000"
                    android:text="客户自提"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c000000"
                android:textSize="18sp"
                android:text="送货时间"/>

            <EditText
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/shape_reg_input1"
                android:text="2015-07-04 18:00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c000000"
                android:textSize="18sp"
                android:text="支付方式"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txt_pay"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/shape_delivery1"
                    android:textColor="@color/cfbc000"
                    android:text="在线支付"/>

                <TextView
                    android:id="@+id/txt_pay1"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/shape_delivery1"
                    android:textColor="@color/cfbc000"
                    android:text="现金支付"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/c000000"
                android:textSize="18sp"
                android:text="收货地址"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_reg_input1">

                <TextView
                    android:id="@+id/lbl_shr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="收货人："/>

                <TextView
                    android:id="@+id/txt_shr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lbl_shr"
                    android:layout_alignTop="@+id/lbl_shr"
                    android:layout_marginLeft="5dp"
                    android:text="小张"/>

                <TextView
                    android:id="@+id/lbl_dh"
                    android:layout_toLeftOf="@+id/txt_dh"
                    android:layout_alignTop="@id/lbl_shr"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："/>

                <TextView
                    android:id="@+id/txt_dh"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="13568881000"/>

                <TextView
                    android:id="@+id/txt_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lbl_shr"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:ellipsize="end"
                    android:text="收货地址：四川省成都市武侯区国际小区5楼23号，小张（收）"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/cfbc000"
        android:textColor="@color/cffffff"
        android:text="确认提交"/>
</LinearLayout>